<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.profile.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="192dp"
            android:layout_height="192dp"
            android:layout_margin="24dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/primary_light"
            android:foreground="@drawable/shape_round"
            android:contentDescription="@string/profile_avatar_description" />

        <include
            android:id="@+id/include_profile_input"
            android:layout_below="@+id/profile_avatar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="16dp"
            layout="@layout/include_profile_input" />

    </RelativeLayout>

</layout>